<p id="notice"><%= notice %></p>

<h1>生徒情報一覧</h1>

<table>
  <thead>
    <tr>
      <th>学籍番号</th>
      <th>氏名</th>
      <th>性別</th>
      <th>生年月日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.student_id %></td>
        <td><%= student.name %></td>
        <td><%= student.sex %></td>
        <td><%= student.birthday %></td>
        <td><%= link_to '成績入力', users_new_record_path(student) %></td>
        <td><%= link_to '詳細表示', users_show_path(student) %></td>
        <td><%= link_to '編集', users_edit_path(student) %></td>
        <td><%= link_to '削除', users_destroy_path(student), method: :delete, data: { confirm: 'ほんとにいいの？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

