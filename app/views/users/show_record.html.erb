<h1><%= "#{@name}さんの成績です" %></h1>

<%= form_tag("/users/show_record/")  do %>
<%= select_tag 'year', options_for_select(@year), {include_blank: '選択して下さい'} %>
<%= select_tag 'semester', options_for_select([ '1', '2', '3' ]), { include_blank: '選択して下さい' } %>
<%= submit_tag '表示' %>
<% end %>

<div align="center">
  <table border="20">
    <thead>
    <tr>
      <th>年度</th>
      <th>学期</th>
      <th>国語</th>
      <th>数学</th>
      <th>英語</th>
      <th>理科</th>
      <th>社会</th>
    </tr>
    </thead>

    <tbody>
    <% @record.each do |rec| %>
      <tr>
        <td><%= rec["year"] %></td>
        <td><%= rec["semester"] %></td>
        <td><%= rec["jpn"] %></td>
        <td><%= rec["math"] %></td>
        <td><%= rec["eng"] %></td>
        <td><%= rec["sci"] %></td>
        <td><%= rec["soc"] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "logout", students_sign_out_path %>