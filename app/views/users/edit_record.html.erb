<h1>成績編集</h1>

<%= form_for(:record, url: "/users/edit_record/#{@ed_record.id}", html: {method: "post"})  do |f| %>
  <table>
    <thead>
    <tr>
      <th>国語</th>
      <th>数学</th>
      <th>英語</th>
      <th>理科</th>
      <th>社会</th>
    </tr>
    </thead>

    <tbody>
    <tr>
      <td><%= f.number_field :jpn, :value => @ed_record.jpn, min: 0, max: 100 %></td>
      <td><%= f.number_field :math, :value => @ed_record.math, min: 0, max: 100  %></td>
      <td><%= f.number_field :eng, :value => @ed_record.eng, min: 0, max: 100  %></td>
      <td><%= f.number_field :sci, :value => @ed_record.sci, min: 0, max: 100  %></td>
      <td><%= f.number_field :soc, :value => @ed_record.soc, min: 0, max: 100  %></td>
      <%= f.hidden_field :id, value: @ed_record.id %>
    </tr>
    <%= f.submit '更新', data: {confirm: "更新しますか？"} %>
    </tbody>
  </table>
<% end %>